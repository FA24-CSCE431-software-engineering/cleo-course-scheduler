<h1>Are you sure you want to delete this student?</h1>
<p>
<% if @student.present? %>
<p>
  <strong>First Name:</strong>
  <%= @student.first_name %><br>
  <strong>Last Name:</strong>
  <%= @student.last_name %><br>
</p>
<% else %>
<p>Student not found.</p>
<% end %>

</p>

<%= form_with(url: student_path(@student), method: :delete) do |form| %>
  <div class="actions">
    <%= form.submit 'Delete Student', class: 'btn btn-danger' %>
    <%= link_to 'Cancel', students_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
