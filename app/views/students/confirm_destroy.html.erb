<% content_for :title, "Delete Student - #{ @student.first_name } #{ @student.last_name }" %>

<h1>Are you sure you want to delete this student?</h1>
<p>
  <strong>First Name:</strong>
  <%= @student.first_name %><br>
  <strong>Last Name:</strong>
  <%= @student.last_name %><br>
</p>

<%= form_with(url: student_path(@student.google_id), method: :delete) do |form| %>
  <div class="actions">
    <%= form.submit 'Delete Student', class: 'btn btn-danger' %>
    <%= link_to 'Cancel', students_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
