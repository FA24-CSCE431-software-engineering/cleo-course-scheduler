<%= render 'shared/navbar' %>
<% content_for :title, "Delete Core Category - #{ @core_category.cname }" %>

<h1>Are you sure you want to delete this core category?</h1>
<p>
  <strong>Category Name:</strong>
  <%= @core_category.cname %><br>
</p>

<%= form_with(url: admin_core_category_path(@core_category), method: :delete) do |form| %>
  <div class="actions">
    <%= form.submit 'Delete Core Category', class: 'btn btn-danger' %>
    <%= link_to 'Cancel', admin_core_category_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
