<h1>Add New Course</h1>

<%= form_with(model: @student_course, local: true) do |form| %>
  <div>
    <%= form.label :course_id, "Select Course" %>
    <%= form.collection_select :course_id, Course.all, :id, :cname, prompt: "Select a course" %>
  </div>
  <div>
    <%= form.submit "Add Course" %>
  </div>
<% end %>

<%= link_to 'Back to Degree Plan', student_courses_path %>
