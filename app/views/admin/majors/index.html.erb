<%= render 'shared/navbar_student' %>

<%#= render 'shared/navbar' %>

<h1>Majors</h1>

<% content_for :title, "Manage Major" %>

<%= link_to 'New Major', new_admin_major_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>College</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @majors.each do |major| %>
      <tr>
        <td><%= major.id %></td>
        <td><%= major.mname %></td>
        <td><%= major.cname %></td>
        <td><%= major.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= major.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td>
          <%= link_to 'Edit', edit_admin_major_path(major) %>
          <%= link_to 'Delete', confirm_destroy_admin_major_path(major), method: :get, data: { confirm: 'Are you sure you want to delete this major?' } %>
        </td
      </tr>
    <% end %>
  </tbody>
</table>
