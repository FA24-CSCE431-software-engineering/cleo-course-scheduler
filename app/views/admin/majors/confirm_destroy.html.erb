<!-- app/views/admin/majors/confirm_destroy.html.erb -->
<h1>Are you sure you want to delete this major?</h1>
<p>
  <strong>Major Name:</strong>
  <%= @major.mname %><br>
  <strong>College Name:</strong>
  <%= @major.cname %><br>
</p>

<%= form_with(url: major_path(@major), method: :delete) do |form| %>
  <div class="actions">
    <%= form.submit 'Delete Major', class: 'btn btn-danger' %>
    <%= link_to 'Cancel', majors_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
